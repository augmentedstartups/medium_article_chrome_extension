{
  "manifest_version": 3,
  "name": "Medium to LinkedIn Article Publisher",
  "version": "1.8.3",
  "description": "Extract Medium articles and publish them to LinkedIn with one click",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://medium.com/*",
    "https://*.medium.com/*",
    "https://www.linkedin.com/*",
    "https://linkedin.com/*",
    "https://app.kajabi.com/*"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://medium.com/*", "https://*.medium.com/*"],
      "js": ["src/shared/config.js", "src/medium/parser.js", "src/medium/extractor.js", "src/medium/ui-injector.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.linkedin.com/*", "https://linkedin.com/*"],
      "js": [
        "src/shared/config.js",
        "src/linkedin/retry-handler.js",
        "src/linkedin/dom-utils.js",
        "src/linkedin/strategies/clipboard-api-strategy.js",
        "src/linkedin/strategies/file-upload-strategy.js",
        "src/linkedin/strategies/user-paste-strategy.js",
        "src/linkedin/strategies/prosemirror-strategy.js",
        "src/linkedin/injector.js",
        "src/linkedin/ui-helper.js",
        "src/linkedin/test-data.js",
        "src/linkedin/test-button.js",
        "src/linkedin/sidebar.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://app.kajabi.com/admin/sites/*/blog_posts/*"],
      "js": [
        "src/kajabi/dom-utils.js",
        "src/kajabi/injector.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "src/popup/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": []
}

